<?xml version='1.0' ?>
<launch>
  <!-- Simulation -->
  <include file="$(find-pkg-share the_construct_office_gazebo)/launch/main_two_robots.launch.xml"/>

  <!-- barista_ros2 repo needed to launch Nav2: https://bitbucket.org/theconstructcore/barista_ros2.git-->

  <!-- Localization -->
  <include file="$(find-pkg-share localization_server)/launch/localization.launch.py"/>

  <!-- Navigation -->
  <include file="$(find-pkg-share path_planner_server)/launch/pathplanner.launch.py"/>

  <!-- Battery Simulators -->
  <include file="$(find-pkg-share barista_gazebo)/launch/start_multiple_sim_battery.launch.xml"/>

  <!-- Docked Checker -->
  <include file="$(find-pkg-share barista_dock_charger_station)/launch/start_fleet_robots_are_docked.launch.xml"/>

  <!-- Charger Servers -->
  <include file="$(find-pkg-share barista_dock_charger_station)/launch/launch_two_barista_charge_servers.launch.xml"/>



</launch>