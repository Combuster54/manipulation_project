<?xml version='1.0' ?>
<launch>
  <arg name="number_of_robots" default="2"/>

  <!-- Launches World now independently form spawning robot -->
  <include file="$(find-pkg-share the_construct_office_gazebo)/launch/start_world_standalone.launch.py"/>

  <!-- spawns two baristas in the construct office -->
  <include file="$(find-pkg-share barista_gazebo)/launch/barista_1_slotcar.launch.py"/>
  <include file="$(find-pkg-share barista_gazebo)/launch/barista_2_slotcar.launch.py"/>

  <!-- Battery Simulators -->
  <include file="$(find-pkg-share barista_gazebo)/launch/start_multiple_sim_battery.launch.xml"/>

  <!-- Docked Checker -->
  <include file="$(find-pkg-share barista_dock_charger_station)/launch/start_fleet_robots_are_docked.launch.xml"/>

  <!-- Teleport Charging Servers -->
  <include file="$(find-pkg-share barista_dock_charger_station)/launch/start_two_teleport_charge_servers.launch.xml"/>



</launch>